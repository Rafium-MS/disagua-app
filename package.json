{
  "name": "disagua-app",
  "version": "0.1.0",
  "private": true,
  "description": "Aplicativo Electron + React para gestão Diságua",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "start": "electron .",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && electron-builder",
    "package": "electron-builder --dir",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0",
    "vite": "^5.4.8"
  }
}

