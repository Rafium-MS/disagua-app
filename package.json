{
  "name": "disagua-app",
  "version": "0.3.0",
  "private": true,
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev:react": "vite",
    "dev:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev": "concurrently -k \"npm:dev:react\" \"wait-on http://localhost:5173 && npm:dev:electron\"",
    "build": "vite build && tsc -p electron/tsconfig.json",
    "preview": "vite preview",
    "test": "vitest --environment jsdom",
    "dist": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.disagua.app",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "electron/main.js",
      "electron/preload.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.12.12",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "jsdom": "^25.0.0",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.5.4",
    "vite": "^5.4.6",
    "vitest": "^2.1.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@tanstack/react-table": "^8.20.5",
    "class-variance-authority": "^0.7.0",
    "lucide-react": "^0.460.0",
    "phosphor-react": "^1.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-router-dom": "^6.28.0",
    "tailwind-merge": "^2.5.2",
    "yup": "^1.4.0"
  }
}
